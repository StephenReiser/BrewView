<!DOCTYPE html>
<html>
  <head>
    <!-- CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  </head>
    <body>
      <div class="container">
        <h1>Add a Brewery</h1>
        <div class="row">
          <form class="col s12" action="/brew" method = "POST">
            <div class="row">
              <div class="input-field col s6">
                <input id="name" type="text" class="validate" name="name" placeholder='Name (required)' required>
                
              </div>
            </div>
            <div class="row">
            <div class="input-field col s6">
                <input id="lattitude" type="number" class="validate" name="lattitude" step='any' placeholder='Lattitude (required)' required>
              </div>
            </div>
             <div class="row">
             <div class="input-field col s6">
                <input id="longitude" type="number" class="validate" name="longitude" step = 'any' placeholder='Longitude (required)' required>
        
              </div>
            </div>
            <div class="row">
             <div class="input-field col s6">
                <input id="website" type="text" class="validate" name="website" placeholder= 'Website URL(required)' required>
                
              </div>
            </div>
            <div class="row">
             <div class="input-field col s6">
                <input id="mainImage" type="text" class="validate" name="mainImage" placeholder='Image Link'>
                
              </div>
            </div>
            <div class="row">
             <div class="input-field col s6">
                <input id="imageTwo" type="text" class="validate" name="imageTwo" placeholder='Image #2'>
                
              </div>
            </div>
            <div class="row">
             <div class="input-field col s6">
                <input id="imageThree" type="text" class="validate" name="imageThree" placeholder='Image #3'>
                
              </div>
            </div>
            <div class="row">
             <div class="input-field col s6">
                <input id="imageFour" type="text" class="validate" name="imageFour" placeholder='Image #4'>
                
              </div>
            </div>
            <p>
                <label>
                    <input type="checkbox" name="dogFriendly"/>
                    <span>Dog Friendly</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" name="outsideFood"/>
                    <span>Outside Food</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" name="foodTrucks"/>
                    <span>Food Trucks</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" name="glutenFree"/>
                    <span>Gluten Free</span>
                </label>
            </p>
            
            
            <button class="btn waves-effect waves-light" type="submit" name="action">
              <i class="material-icons right">Create</i>
            </button>
          </form>
        </div>
    </body>
</html>