<html>
  <head>
    <!-- CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.css">
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
     <link rel='stylesheet' href='./css/main.css'>
  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script src='./js/main.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.js"></script>
  </head>
    <body>
 <% include ./partials/nav.ejs%>

      <div class="container">
        <h1 class='mainHeaderClass'>Welcome to Brew View</h1>
        <h5 class='mainHeaderClass'>Can't find what you are looking for? Take a look below:</h5>
       
        <%# Probably makes sense to make a new array then sort it %>

        <% let newBrews = brews %>
      <% newBrews.sort((a,b) => { %>
        <%let keyA = a.name%>
        <%let keyB = b.name%>
        <% if (keyA < keyB) { %>
          <% return -1 %>
        <% } else if (keyA > keyB){ %>
              <% return 1%>
        <% } else { %>
              <% return 0 %>
       <% } %>

      <%}) %>

      <ul class = 'collection'>
        <% newBrews.forEach((brewery) => {%>
       
      
           <li class='collection-item'><a href='/brew/<%=brewery.id%>'><%= brewery.name %> </a></li>
           

        
        <%})%>
        </div>
<% include ./partials/autocomplete.ejs%>
    </body>
</html>